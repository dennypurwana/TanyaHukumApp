<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_layout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/viewDate"
            android:layout_width="80dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/labelDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textSize="10sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimaryDark"
                />
            <TextView
                android:id="@+id/appointmentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/labelDate"
                android:textSize="11sp"
                android:layout_marginLeft="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="21-12-2016"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/viewTitle"
            android:layout_toRightOf="@+id/viewDate"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/viewStatus"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleApointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COBA"
                android:textSize="18dp"
                android:textStyle="bold"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/viewStatus"
            android:layout_width="100dp"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/labelStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status"
                android:textSize="10sp"
                android:layout_marginRight="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimaryDark"
                />
            <TextView
                android:id="@+id/statusAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_below="@+id/labelStatus"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:text="new"/>
        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>