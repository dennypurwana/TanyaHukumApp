<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.tanyahukum.view.AboutActivity">

    <LinearLayout
        android:id="@+id/linImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">
        </LinearLayout>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:src="@drawable/logo_medium" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

    <WebView
        android:id="@+id/containerAbout"
        android:layout_below="@+id/linImage"
        android:layout_marginTop="@dimen/marginTopHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/marginGeneral"
        android:layout_marginRight="@dimen/marginGeneral"
        android:verticalScrollbarPosition="right" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/containerAbout"
        android:layout_marginTop="@dimen/marginTopHeader"
        android:layout_alignLeft="@+id/containerAbout"
        android:layout_alignRight="@+id/containerAbout"
        android:text="@string/back_to_home"
        android:textColor="@color/white"
        android:backgroundTint="@color/colorPrimary"
        />

</RelativeLayout>
