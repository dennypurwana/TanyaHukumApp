<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_layout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layoutQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/questionsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="questions"
            android:textSize="11dp"
            android:paddingLeft="10dp"
            android:textColor="@color/md_grey_400"
            android:paddingTop="10dp"
            android:layout_marginRight="20dp"/>
    <TextView
        android:layout_below="@+id/questionsLabel"
        android:id="@+id/questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="questions"
        android:paddingLeft="10dp"
        android:textSize="18dp"
        android:layout_marginRight="20dp"/>
        <TextView
            android:layout_below="@+id/questions"
            android:id="@+id/questionsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="10:00"
            android:paddingLeft="10dp"
            android:textSize="11sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/layoutQuestions"
        android:id="@+id/layoutAnswers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/answerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="answers"
            android:textSize="11dp"
            android:paddingLeft="10dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_below="@+id/answerLabel"
            android:id="@+id/answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="answers"
            android:paddingLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_below="@+id/answers"
            android:id="@+id/answersDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="10:00"
            android:paddingLeft="10dp"
            android:textSize="11sp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_below="@+id/layoutAnswers"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_300"></LinearLayout>
</RelativeLayout>
</RelativeLayout>