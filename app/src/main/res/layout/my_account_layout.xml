<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/toolbar"/>
        <ProgressBar
            android:id="@+id/progress"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
        <TableLayout
            android:id="@+id/tableRegistration"
            android:layout_marginTop="70dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageDefault"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="20dp"
                    android:layout_width="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="80dp"
                    android:visibility="visible"
                    android:src="@drawable/icon_account"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageProfile"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="20dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    android:src="@drawable/icon_account"
                    />
                </RelativeLayout>
            </TableRow>
        <TableRow>
            <RelativeLayout android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/labelName"
                    android:layout_marginLeft="30dp"
                    android:textSize="13sp"
                    android:textColor="@color/md_grey_400"
                    android:text="Name"/>
                <TextView
                    android:layout_below="@+id/labelName"
                    android:textColor="@color/md_grey_700"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edTextName"
                    />
                <LinearLayout
                    android:layout_below="@+id/edTextName"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/md_grey_300"></LinearLayout>
            </RelativeLayout>

        </TableRow>
            <TableRow>
                <RelativeLayout android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/labelEmail"
                        android:layout_marginLeft="30dp"
                        android:textSize="13sp"
                        android:textColor="@color/md_grey_400"
                        android:text="Email"/>
                    <TextView
                        android:layout_below="@+id/labelEmail"
                        android:textColor="@color/md_grey_700"
                        android:textSize="17sp"
                        android:padding="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edTextEmail"
                        />
                    <LinearLayout
                        android:layout_below="@+id/edTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/md_grey_300"></LinearLayout>
                </RelativeLayout>

            </TableRow>
            <TableRow>
                <RelativeLayout android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/labelBornDate"
                        android:layout_marginLeft="30dp"
                        android:textSize="13sp"
                        android:textColor="@color/md_grey_400"
                        android:text="Born Date"/>
                    <TextView
                        android:layout_below="@+id/labelBornDate"
                        android:textColor="@color/md_grey_700"
                        android:textSize="17sp"
                        android:padding="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edTextBornDate"
                        />
                    <LinearLayout
                        android:layout_below="@+id/edTextBornDate"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/md_grey_300"></LinearLayout>
                </RelativeLayout>

            </TableRow>
            <TableRow>
                <RelativeLayout android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/labelGender"
                        android:layout_marginLeft="30dp"
                        android:textSize="13sp"
                        android:textColor="@color/md_grey_400"
                        android:text="Gender"/>
                    <TextView
                        android:layout_below="@+id/labelGender"
                        android:textColor="@color/md_grey_700"
                        android:textSize="17sp"
                        android:padding="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edTextGender"
                        />
                    <LinearLayout
                        android:layout_below="@+id/edTextGender"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/md_grey_300"></LinearLayout>
                </RelativeLayout>

            </TableRow>
            <TableRow>
                <RelativeLayout android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/labelPhone"
                        android:layout_marginLeft="30dp"
                        android:textSize="13sp"
                        android:textColor="@color/md_grey_400"
                        android:text="Phone"/>
                    <TextView
                        android:layout_below="@+id/labelPhone"
                        android:textColor="@color/md_grey_700"
                        android:textSize="17sp"
                        android:padding="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edTextPhone"
                        />
                    <LinearLayout
                        android:layout_below="@+id/edTextPhone"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/md_grey_300"></LinearLayout>
                </RelativeLayout>
            </TableRow>
                <TableRow>
                    <RelativeLayout android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/labelProvince"
                            android:layout_marginLeft="30dp"
                            android:textSize="13sp"
                            android:textColor="@color/md_grey_400"
                            android:text="Province"/>
                        <TextView
                            android:layout_below="@+id/labelProvince"
                            android:textColor="@color/md_grey_700"
                            android:textSize="17sp"
                            android:padding="5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/edTextProvince"
                            />
                        <LinearLayout
                            android:layout_below="@+id/edTextProvince"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/md_grey_300"></LinearLayout>
                    </RelativeLayout>


            </TableRow>
            <TableRow>
                <RelativeLayout android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/labelCity"
                        android:layout_marginLeft="30dp"
                        android:textSize="13sp"
                        android:textColor="@color/md_grey_400"
                        android:text="City"/>
                    <TextView
                        android:layout_below="@+id/labelCity"
                        android:textColor="@color/md_grey_700"
                        android:textSize="17sp"
                        android:padding="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edTextCity"
                        />
                    <LinearLayout
                        android:layout_below="@+id/edTextCity"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/md_grey_300"></LinearLayout>
                </RelativeLayout>

            </TableRow>
            <TableRow>
                <RelativeLayout android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/labelAddress"
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/md_grey_400"
                        android:textSize="13sp"
                        android:text="Address"/>
                    <TextView
                        android:layout_below="@+id/labelAddress"
                        android:textColor="@color/md_grey_700"
                        android:textSize="17sp"
                        android:padding="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edTextAddress"
                        />
                    <LinearLayout
                        android:layout_below="@+id/edTextAddress"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/md_grey_300"></LinearLayout>
                </RelativeLayout>

            </TableRow>
            <TableRow>
                <RelativeLayout android:layout_weight="1"
                    android:id="@+id/layoutLawFirm"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lawFirmText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:text="Law Firm Address"/>
                    <TextView
                        android:layout_below="@+id/lawFirmText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/labelLawFirm"
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/md_grey_400"
                        android:textSize="13sp"
                        android:text="Law Firm"/>
                    <TextView
                        android:layout_below="@+id/labelLawFirm"
                        android:textColor="@color/md_grey_700"
                        android:textSize="17sp"
                        android:padding="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edTextLawFirm"
                        />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/lineLawFirm"
                        android:layout_below="@+id/edTextLawFirm"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/md_grey_300"></LinearLayout>
                    <TextView
                        android:layout_below="@+id/lineLawFirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/labelLawFirmCity"
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/md_grey_400"
                        android:textSize="13sp"
                        android:text="Law Firm City"/>
                    <TextView
                        android:layout_below="@+id/labelLawFirmCity"
                        android:textColor="@color/md_grey_700"
                        android:textSize="17sp"
                        android:padding="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edTextLawFirmCity"
                        />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/lineLawFirmCity"
                        android:layout_below="@+id/edTextLawFirmCity"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/md_grey_300"></LinearLayout>
                    <TextView
                        android:layout_below="@+id/lineLawFirmCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/labelLawFirmAddress"
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/md_grey_400"
                        android:textSize="13sp"
                        android:text="Law Firm Address"/>
                    <TextView
                        android:layout_below="@+id/labelLawFirmAddress"
                        android:textColor="@color/md_grey_700"
                        android:textSize="17sp"
                        android:padding="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edTextLawFirmAddress"
                        />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/lineLawFirmAddress"
                        android:layout_below="@+id/edTextLawFirmAddress"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/md_grey_300"></LinearLayout>




                </RelativeLayout>
            </TableRow>
            <TableRow>
                <LinearLayout
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:id="@+id/layoutButton"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/linearLayoutCancel"
                        android:layout_width="0dp"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btnCancel"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Cancel"
                            android:textColor="@color/colorPrimary"
                            android:background="@color/md_grey_100"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linearLayoutEdit"
                        android:layout_margin="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">
                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btnEdit"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="20dp"
                            android:text="EDIT"
                            android:textColor="@color/white"
                            android:background="@color/colorPrimary"/>
                    </LinearLayout>


                </LinearLayout>
            </TableRow>
        </TableLayout>
    </RelativeLayout>

</ScrollView>